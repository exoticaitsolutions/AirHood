<section class="be_cook">
    <div class="be_cook_title">
      <h3>{{ section.settings.section_title }}</h3>
      {{ section.settings.description }}
    </div>
    <div class="be_cook_inner">
      {% for block in section.blocks %}
      <div class="be_cook_box">
         <div class="be_cook_img">
           <img src="{{ block.settings.image | img_url:"original" }}" alt="img">
         </div>
        <div class="be_cook_content">
          {{ block.settings.description }}
         </div>
      </div>
{% endfor %}
      
    </div>
</section>
{% schema %}
    {
      "name": "Custom Images Text",
      "settings": [
        {
          "type": "text",
          "id": "section_title",
          "label": "Section Title",
          "default": "Trusted by Home Cooks"
        },
         {
          "type": "richtext",
          "id": "description",
          "label": "Section Description"
        }
      ],
      "blocks": [
        {
          "type": "image_with_text",
          "name": "Image With Text",
          "settings": [
          
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            },
            {
          "type": "richtext",
          "id": "description",
          "label": "Section Description"
        }
           
          ]
        }
      ],
      "max_blocks": 12,
      "presets": [
        {
          "name": "Custom Images Text",
          "category": "Custom"
        }
      ]
    }
{% endschema %}